<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.bcit.cst.seta2016.invoker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CardActivity" />
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TopicsMenu"
            android:label="@string/menuTopics"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SexTopic"
            android:label="@string/topicMenuSex"
            android:parentActivityName=".TopicsMenu" />
        <activity android:name=".RelTopic"
            android:label="@string/topicMenuRel"
            android:parentActivityName=".TopicsMenu" />
        <activity android:name=".DrugTopic"
            android:label="@string/topicMenuDrugs"
            android:parentActivityName=".TopicsMenu" />
        <activity android:name=".BullyTopic"
            android:label="@string/topicMenuBully"
            android:parentActivityName=".TopicsMenu" />
        <activity
            android:name=".InputActivity"
            android:label="Create Note"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>